---
// src/components/RecommendationCard.astro
// Composant d'affiliation √©l√©gant - Design "Carte Recommand√©e"
// Usage dans MDX: <RecommendationCard title="Wise" description="..." link="https://..." />

interface Props {
  title: string;
  description: string;
  link: string;
  logo?: string;
  buttonText?: string;
  highlight?: string;
  variant?: 'default' | 'premium' | 'essential';
  pros?: string[];
  rating?: number;
}

const { 
  title, 
  description, 
  link, 
  logo,
  buttonText = "En savoir plus",
  highlight,
  variant = 'default',
  pros = [],
  rating
} = Astro.props;

// Styles par variante
const variantStyles = {
  default: {
    border: 'border-l-accent-success',
    bg: 'from-accent-success/5 to-transparent',
    badge: 'bg-accent-success',
    button: 'btn-success'
  },
  premium: {
    border: 'border-l-gov-600',
    bg: 'from-gov-50 to-transparent',
    badge: 'bg-gov-600',
    button: 'btn-primary'
  },
  essential: {
    border: 'border-l-maple-600',
    bg: 'from-maple-50 to-transparent',
    badge: 'bg-maple-600',
    button: 'btn-maple'
  }
};

const styles = variantStyles[variant];
---

<aside class={`relative card p-6 border-l-4 ${styles.border} bg-gradient-to-r ${styles.bg} my-8 animate-fade-in`}>
  <!-- Badge "Recommand√©" -->
  <div class={`absolute -top-3 left-4 px-3 py-1 ${styles.badge} text-white text-xs font-semibold rounded-full flex items-center gap-1`}>
    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
    </svg>
    <span>Recommand√©</span>
  </div>
  
  <div class="flex flex-col md:flex-row md:items-center gap-6 mt-2">
    <!-- Logo (optionnel) -->
    {logo && (
      <div class="flex-shrink-0">
        <img 
          src={logo} 
          alt={`Logo ${title}`} 
          class="w-16 h-16 object-contain rounded-lg bg-white p-2 border border-trust-border"
          loading="lazy"
        />
      </div>
    )}
    
    <!-- Contenu -->
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between gap-4 mb-2">
        <h4 class="text-xl font-bold text-trust-dark">{title}</h4>
        
        <!-- Rating (optionnel) -->
        {rating && (
          <div class="flex items-center gap-1 text-amber-500 flex-shrink-0">
            {Array.from({ length: 5 }).map((_, i) => (
              <svg 
                class={`w-4 h-4 ${i < rating ? 'fill-current' : 'fill-gray-300'}`} 
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
            <span class="text-sm text-trust-text ml-1">{rating}/5</span>
          </div>
        )}
      </div>
      
      <!-- Highlight (optionnel) -->
      {highlight && (
        <div class="inline-flex items-center gap-1 px-2 py-1 bg-amber-100 text-amber-800 text-xs font-medium rounded mb-2">
          <span>‚≠ê</span>
          <span>{highlight}</span>
        </div>
      )}
      
      <p class="text-trust-text leading-relaxed mb-3">{description}</p>
      
      <!-- Avantages (optionnel) -->
      {pros.length > 0 && (
        <ul class="flex flex-wrap gap-x-4 gap-y-1 mb-4">
          {pros.map((pro) => (
            <li class="flex items-center gap-1 text-sm text-accent-success">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>{pro}</span>
            </li>
          ))}
        </ul>
      )}
    </div>
    
    <!-- Bouton CTA -->
    <div class="flex-shrink-0">
      <a 
        href={link} 
        target="_blank" 
        rel="noopener sponsored"
        class={`${styles.button} whitespace-nowrap`}
      >
        {buttonText}
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
  
  <!-- Disclaimer discret -->
  <p class="text-xs text-gray-400 mt-4 pt-3 border-t border-trust-border">
    üîó Lien affili√© ‚Äî Nous pouvons recevoir une commission si vous souscrivez via ce lien, sans frais suppl√©mentaires pour vous.
  </p>
</aside>
